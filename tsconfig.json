{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "lib": [
			"dom",
			"dom.iterable",
			"esnext",
			"scripthost"
		],
        "allowJs": false,
        "allowSyntheticDefaultImports": true,
        "isolatedModules": true,
        "moduleResolution": "node",
        "strict": true,
        "jsx": "preserve",
        "jsxImportSource": "solid-js",
        "esModuleInterop": true,
        "declaration": true,
        "emitDeclarationOnly": true,
        "outDir": "dist",
        "rootDir": "src",
        "sourceMap": true,
        "types": ["solid-js", "vite/client", "node"],
        "skipLibCheck": true,
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}